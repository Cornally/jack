{
  "name": "jack-strap",
  "version": "0.0.8",
  "description": "Lightweight/portable styling engine",
  "main": "server.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node server.js --host 0.0.0.0",
    "watch": "sass --watch src:dist src/jack.scss:docs/assets/jack.css --sourcemap=none",
    "release": "sass --update src:dist --style compressed --sourcemap=none",
    "copy": "node copy.js",
    "jekyll-dev": "copy && cd docs-src && bundle exec jekyll serve --baseurl ''",
    "jekyll-release": "copy && cd docs-src && JEKYLL_ENV=production jekyll build && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cornally/jack.git"
  },
  "keywords": [
    "styling",
    "framework",
    "jack",
    "sass",
    "scss",
    "flexbox",
    "flex"
  ],
  "author": "@Cornally",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cornally/jack/issues"
  },
  "homepage": "https://github.com/Cornally/jack#readme",
  "dependencies": {
    "copy": "^0.3.0",
    "express": "^4.15.2",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "node-sass": "^4.5.2"
  }
}
